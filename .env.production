# Production Environment Overrides
NODE_ENV=production
DEBUG=false

# Database Configuration
POSTGRES_HOST=postgres-prod
POSTGRES_PORT=5432
POSTGRES_USER=${PROD_POSTGRES_USER}
POSTGRES_PASSWORD=${PROD_POSTGRES_PASSWORD}

# MongoDB
MONGODB_URI_CIVILBOT=mongodb://${PROD_MONGO_USER}:${PROD_MONGO_PASSWORD}@mongo-prod:27017/civilbot?authSource=admin
MONGODB_URI_TECH_BLOG=mongodb://${PROD_MONGO_USER}:${PROD_MONGO_PASSWORD}@mongo-prod:27017/tech-blog?authSource=admin

# Neo4j
NEO4J_URI=bolt://neo4j-prod:7687
NEO4J_USER=${PROD_NEO4J_USER}
NEO4J_PASSWORD=${PROD_NEO4J_PASSWORD}

# Redis
REDIS_HOST=redis-prod
REDIS_PORT=6379
REDIS_PASSWORD=${PROD_REDIS_PASSWORD}

# Security
CORS_ORIGIN=https://yourdomain.com
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=50

# SSL Configuration
USE_SSL=true
SSL_CERT_PATH=/etc/ssl/certs/your-domain.crt
SSL_KEY_PATH=/etc/ssl/private/your-domain.key

# Monitoring
PROMETHEUS_ENABLED=true
JAEGER_ENABLED=true
LOG_LEVEL=info

# Backup Configuration
BACKUP_RETENTION_DAYS=90
BACKUP_TIME=02:00
BACKUP_S3_BUCKET=${PROD_BACKUP_BUCKET}
AWS_ACCESS_KEY_ID=${PROD_AWS_ACCESS_KEY}
AWS_SECRET_ACCESS_KEY=${PROD_AWS_SECRET_KEY}
AWS_REGION=${PROD_AWS_REGION} 